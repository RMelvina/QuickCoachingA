<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDashboard"
    android:id="@+id/layout_drawer"
    android:fitsSystemWindows="true"
    android:background="#b6e1df">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/nav_toolbar"
            android:id="@+id/toolbar"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/cardView1">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_toLeftOf="@id/title"
                            android:background="@drawable/icon3"

                            />


                        <TextView
                            android:id="@+id/title"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"

                            android:fontFamily="@font/montserrat"
                            android:text="Da Vinciâ€™s Workshop"
                            android:textAlignment="center"
                            android:textSize="30dp" />



                    </RelativeLayout>


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="210dp"
                    >


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/white"
                        android:id="@+id/boader_1"/>

                    <View
                        android:layout_width="4dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/white"
                        android:id="@+id/boaderLeft"

                        />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/white"
                        />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/User_Dashboard_Text_One"
                        android:textSize="20dp"
                        android:layout_below="@id/boader_1"
                        android:layout_marginLeft="50dp"
                        android:id="@+id/text"
                        android:textColor="@android:color/white"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/white"
                        android:layout_below="@id/text"/>


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="320dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="39dp"
                        android:id="@+id/fly_in_cardView_2"
                        android:layout_weight="1"
                        android:onClick="quick_coaching"
                        android:background="#edf6f7"

                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="177dp"
                            android:background="#edf6f7">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/iconlightbulb"
                                android:id="@+id/imageLightBulb"/>

                            <TextView
                                android:layout_width="900dp"
                                android:layout_height="wrap_content"
                                android:text="Quick Coaching"
                                android:textSize="23dp"
                                android:textAllCaps="true"
                                android:layout_below="@id/imageLightBulb"
                                android:layout_centerHorizontal="true"
                                android:textAlignment="center"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold"/>



                        </RelativeLayout>




                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#edf6f7"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="39dp"
                        android:id="@+id/fly_in_cardView_3"


                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="177dp"
                            android:background="#edf6f7">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/icon1"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/imageLightBulb2"/>

                            <TextView
                                android:layout_width="900dp"
                                android:layout_height="wrap_content"
                                android:text="Progress report"
                                android:textSize="23dp"
                                android:textAllCaps="true"
                                android:layout_below="@id/imageLightBulb2"
                                android:layout_centerHorizontal="true"
                                android:textAlignment="center"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold"/>



                        </RelativeLayout>




                    </androidx.cardview.widget.CardView>





                </LinearLayout>



            </RelativeLayout>






        </LinearLayout>

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_drawer"
        app:menu="@menu/toolbar_nav_drawer"
        />



</androidx.drawerlayout.widget.DrawerLayout>